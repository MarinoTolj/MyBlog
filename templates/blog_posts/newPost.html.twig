{% extends 'base.html.twig' %}

{% block title %}Hello BlogPostsController!{% endblock %}

{% block body %}
<style>
    .form-container {width: 500px;min-width:fit-content;margin: 20px auto 0;}
    form {display: flex; justify-content: center; flex-direction: column; gap: 20px;}
    .input-container {display: flex;flex-direction: column;}
    .btn {all:unset;background-color: green;padding: 15px; border-radius: 5px;color:white;text-align:center;font-size:20px ;width: 100%; cursor: pointer;}
    h2 {color: #444;}
    ul {color: #B0413E;font-size: 18px;}
</style>

<div class="form-container">
        <h2>Enter details of your new post.</h2>
    {{ form_start(form) }}
        <div class="input-container">
            {{ form_label(form.title) }}
            {{ form_widget(form.title) }}
            {{ form_errors(form.title) }}
        </div>
        <div class="input-container">
            {{ form_label(form.body) }}
            {{ form_widget(form.body) }}
            {{ form_errors(form.body, {'attrs':{'class':'error'}}) }}
        </div>
        <div class="input-container">
            {{ form_label(form.imageFilename) }}
            {{ form_widget(form.imageFilename) }}
            {{ form_errors(form.imageFilename) }}
        </div>
        {{ form_row(form.save, {'attr': {'class': 'btn'}}) }}
    {{ form_end(form) }}
</div>
{% endblock %}
