{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .container {display: flex;align-items: center;flex-direction: column;}
        h2 {font-size: xxx-large;text-align: center;margin-top: 10px;color: #444444;}
        img {border-radius: 20px; width: 400px; height: 300px;}
        article {
            font-size: xx-large;
            line-height: 3rem;
            text-align: center;
            max-width: 800px;
            margin-top: 20px;
        }
        .likeIcon{
            margin-bottom: 50px;
        }
        .comments-container {

        }
        form {
            width: 100%;

        }
        textarea {
            width: 100%;
            height: 150px;
        }
        #comments{
            width: 40%;
            margin: 0 auto;
        }
        .likeBtn{
            display: flex;
            gap:5px;
            margin: 10px;
        }
        .likeBtn p {
            margin: 0;
        }
    </style>
    <div class="container">
        <h2>{{ post.title }}</h2>

        <img src="{{ asset('uploads/images/' ~ post.imageFilename) }}" alt="Blog post image">
        <article>
            {{ post.body }}
        </article>

        {% if app.user is not null  %}
            <div {{ stimulus_controller('post', {
                blogPostId:post.id
            }) }} class="likeBtn">
                {% if post in app.user.likedPosts%}
                        <i class="fa-solid fa-thumbs-up"></i>

                {% else %}
                    <a {{ stimulus_action('post', 'upvote', 'click') }} style="cursor: pointer;">
                        <i class="fa-regular fa-thumbs-up"></i>
                    </a>
                {% endif %}
                <p>{{ post.likedByUsers|length }}</p>

            </div>
            {{ form(form) }}
        {% endif %}


        <div class="comments-container">
            <h3>Comments:</h3>
            <hr>
            {%for comment in comments %}
                <p class="comment">{{ comment.body }}</p>
                {% if app.user is not null and app.user.id == comment.userId %}
                    <button style="background-color: red;color: white;">Delete Comment</button>
                {% endif %}
            {% endfor %}

        </div>
    </div>
{% endblock %}
